<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical" 
	android:layout_height="match_parent" 
	android:layout_width="match_parent" 
	android:id="@+id/btm">

<!-- <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/welcome" android:orientation="vertical"/> -->



	<ImageView 
	    android:layout_height="2dp" 
	    android:layout_width="match_parent" 
	    android:id="@+id/wel_divide" 
	    android:src="@mipmap/welcome_divide"
	    android:scaleType="fitXY"/>


	<LinearLayout
	    android:orientation="vertical"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:id="@+id/lineout"
		android:gravity="center"
	    android:background="@mipmap/welcomebg"
	    android:layout_weight="9">



		<TextView
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:id="@+id/wel_toast"
	    android:gravity="center"
	    android:textSize="30sp"
	    android:textColor="#ffffff"
	    android:text="@string/welcome_toast"
	    android:textStyle="bold"
	    android:shadowRadius="10"
	    android:shadowDy="5"
	    android:shadowDx="5"
	    android:shadowColor="#000000"/>
	</LinearLayout>
</LinearLayout>